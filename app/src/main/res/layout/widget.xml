<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/widget_frame"
	android:minHeight="60dp"
	android:minWidth="120dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/widget_bg"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/widget_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:ignore="UselessParent">

		<TextView
			style="@style/Widget.weeWXApp.TextView"
			android:id="@+id/widget_location"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="My Place, My Country"
			tools:ignore="HardcodedText" />

		<TextView
			style="@style/Widget.weeWXApp.TextView"
			android:id="@+id/widget_time"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="12:00 EST"
			tools:ignore="HardcodedText" />


		<TextView
			style="@style/Widget.weeWXApp.TextView"
			android:id="@+id/widget_temperature"

			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="10"
			android:layout_gravity="center"
			android:gravity="center"
			android:paddingHorizontal="10dp"
			android:text="35.5*C"
			android:textStyle="bold"
			app:autoSizeTextType="uniform"
			app:autoSizeMaxTextSize="128sp"
			app:autoSizeMinTextSize="12sp"
			app:autoSizeStepGranularity="1sp"
			tools:ignore="HardcodedText" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingHorizontal="10dp"
			android:paddingBottom="3dp">

			<TextView
				style="@style/Widget.weeWXApp.TextView"
				android:id="@+id/widget_wind"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_gravity="bottom"
				android:text="23km/hr"
				tools:ignore="HardcodedText" />

			<TextView
				style="@style/Widget.weeWXApp.TextView"
				android:id="@+id/widget_rain"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_gravity="bottom"
				android:gravity="end"
				android:text="0.0mm"
				tools:ignore="HardcodedText" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>