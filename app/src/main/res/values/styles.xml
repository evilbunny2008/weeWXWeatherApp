<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme.weeWXApp.Light.Common" parent="AppTheme.weeWXApp.Light">
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@color/MyAppNavBarColour</item>
		<item name="android:navigationBarColor">@color/MyAppNavBarColour</item>
		<item name="android:windowLightNavigationBar">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
	</style>

	<style name="AppTheme.weeWXApp.Dark.Common" parent="AppTheme.weeWXApp.Dark">
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@color/MyAppNavBarColour</item>
		<item name="android:navigationBarColor">@color/MyAppNavBarColour</item>
		<item name="android:windowLightNavigationBar">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
	</style>

	<style name="AppTheme.weeWXApp.Common" parent="AppTheme.weeWXApp">
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@color/MyAppNavBarColour</item>
		<item name="android:navigationBarColor">@color/MyAppNavBarColour</item>
		<item name="android:windowLightNavigationBar">false</item>
		<item name="android:windowTranslucentNavigation">false</item>
	</style>

	<style name="AppTheme.weeWXApp.Light.ViewPager" parent="AppTheme.weeWXApp.Light.Common">
		<item name="android:background">@color/White</item>
		<item name="android:textColor">@color/Black</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="AppTheme.weeWXApp.Dark.ViewPager" parent="AppTheme.weeWXApp.Dark.Common">
		<item name="android:background">@color/Black</item>
		<item name="android:textColor">@color/White</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="AppTheme.weeWXApp.ViewPager" parent="AppTheme.weeWXApp.Common">
		<item name="android:background">@color/splash_background</item>
		<item name="android:textColor">@color/splash_foreground</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Widget.weeWXApp">

	</style>

	<style name="Widget.weeWXApp.NavBar" parent="AppTheme.weeWXApp.Common">
		<item name="android:windowBackground">@color/MyAppNavBarColour</item>
		<item name="android:background">@color/MyAppNavBarColour</item>
		<item name="android:textColorPrimary">@color/MyAppNavBarTextColour</item>
		<item name="android:textColorSecondary">@color/MyAppNavBarTextColour</item>
		<item name="android:textColor">@color/MyAppNavBarTextColour</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Widget.weeWXApp.AppBarLayout" parent="AppTheme.weeWXApp.Common">
		<item name="android:background">@color/MyAppNavBarColour</item>
		<item name="android:textColorPrimary">@color/MyAppNavBarTextColour</item>
		<item name="android:textColorSecondary">@color/MyAppNavBarTextColour</item>
		<item name="android:textColor">@color/MyAppNavBarTextColour</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Widget.weeWXApp.TabBarLayout" parent="AppTheme.weeWXApp.Common">
		<item name="android:background">@color/MyAppNavBarColour</item>
		<item name="android:textColorPrimary">@color/MyAppNavBarTextColour</item>
		<item name="android:textColorSecondary">@color/MyAppNavBarTextColour</item>
		<item name="android:textColor">@color/MyAppNavBarTextColour</item>
		<item name="android:textSize">20sp</item>
		<item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
		<item name="tabIndicatorColor">@color/tabIndicatorColor</item>
		<item name="tabIndicatorHeight">5dp</item>
		<item name="tabTextColor">@color/tabSelectedTextColor</item>
		<item name="tabIndicatorFullWidth">true</item>
		<item name="tabInlineLabel">true</item>
		<item name="tabMode">scrollable</item>
	</style>

	<style name="Widget.weeWXApp.RadioButtons" parent="AppTheme.weeWXApp.Common">
		<item name="android:textSize">20sp</item>
		<item name="buttonTint">@color/MyAppNavBarColour</item>
	</style>

	<style name="Widget.weeWXApp.Button" parent="AppTheme.weeWXApp.Common">
		<item name="android:textSize">16sp</item>
		<item name="android:insetTop">8dp</item>
		<item name="android:insetBottom">8dp</item>
		<item name="cornerRadius">12dp</item>
		<item name="android:letterSpacing">0.05</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/White</item>
		<item name="backgroundTint">@color/MyAppNavBarColour</item>
	</style>

	<style name="Widget.weeWXApp.Switch" parent="AppTheme.weeWXApp.Common">
		<item name="thumbTint">@color/MyAppNavBarColour</item>
		<item name="trackTint">@color/MyTintColour</item>
	</style>

	<style name="Widget.weeWXApp.Slider" parent="AppTheme.weeWXApp.Common">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">10dp</item>
		<item name="android:layout_marginEnd">10dp</item>
		<item name="android:valueFrom">50</item>
		<item name="android:valueTo">200</item>
		<item name="android:stepSize">1</item>
		<item name="android:value">100</item>
		<item name="thumbTint">@color/MyAppNavBarColour</item>
		<item name="trackTint">@color/LightBlueAccent</item>
		<item name="haloColor">@color/LightBlueAccent</item>
		<item name="trackColorInactive">@color/LightBlueAccent</item>
	</style>

	<declare-styleable name="MaxWidthLinearLayout">
		<attr name="maxWidth" format="dimension" />
	</declare-styleable>

	<style name="Widget.weeWXApp.TextView">
		<item name="android:textSize">11sp</item>
		<item name="android:letterSpacing">-0.08</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:lineSpacingMultiplier">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">none</item>
		<item name="android:maxLines">1</item>
	</style>
</resources>