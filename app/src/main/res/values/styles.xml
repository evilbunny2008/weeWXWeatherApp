<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme.weeWxWeatherApp.Common" parent="AppTheme.weeWxWeatherApp">
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">true</item>
		<item name="android:textColor">@color/textColor</item>
		<item name="android:textSize">20sp</item>
		<item name="android:navigationBarColor">@color/colorPrimary</item>
		<item name="android:statusBarColor">@color/colorPrimary</item>
	</style>

	<style name="AppTheme.weeWxWeatherApp.AppBarLayout" parent="AppTheme.weeWxWeatherApp.Common">
		<item name="android:background">@color/colorPrimary</item>
		<item name="colorPrimary">@color/white</item>
		<item name="colorPrimaryDark">@color/white</item>
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white</item>
	</style>

	<style name="AppTheme.weeWxWeatherApp.TabLayout" parent="AppTheme.weeWxWeatherApp.Common">
		<item name="android:background">@color/colorPrimary</item>
		<item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
		<item name="tabIndicatorColor">@color/tabIndicatorColor</item>
		<item name="tabIndicatorHeight">5dp</item>
		<item name="tabTextColor">@color/tabSelectedTextColor</item>
		<item name="tabIndicatorFullWidth">true</item>
		<item name="tabInlineLabel">true</item>
		<item name="tabMode">scrollable</item>
	</style>

	<style name="AppTheme.weeWxWeatherApp.ViewPager" parent="AppTheme.weeWxWeatherApp.Common">
		<item name="android:background">@color/colorBackground</item>
	</style>
</resources>